{% macro thumbnail(args) %}
    {% import '@macros/media-macros.html.twig' as media %}
    {% set args = args|merge({'class': 'thumbnail'}) %}  {# Bootstrap3: thumbnail #}
    {{ media.image(args) }}
{% endmacro %}


