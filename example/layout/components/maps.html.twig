{% extends 'base.html.twig' %}
{% import '@default/components/maps/google/map.html.twig' as google %}




{% block javascript %}
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&sensor=true"></script>
<script>
    {%  include '@default/components/maps/google/themes/apple-maps-theme.js' %}
    {%  include '@default/components/maps/google/jquery.google_maps.js' %}
</script>
{% endblock %}




{% block body %}
<div class="container">
    <h3>Google Maps (Styled)</h3>

    <div class="row-fluid">


        <div class="col-md-6">
        {{ google.google_maps(
            'barcelona',
            {
                "style":"width:100%; height:250px; border-radius: 8px; overflow: hidden",
                "data-zoom":"12",
                "data-lat":"41.3870154",
                "data-lon":"2.1700471",
                "data-marker" : true,
                "data-scroll-wheel": false,
                "data-navigation-control": false,
                "data-scale-control": false,
                "data-draggable": false,
                "data-map-type-control": false
            }
        ) }}
        </div>
        <div class="col-md-6">
        {{ google.google_maps(
        'office',
            {
                "style":"width:100%; height:250px; border-radius: 8px; overflow: hidden",
                "data-zoom":"17",
                "data-lat":"41.395086",
                "data-lon":"2.1502881",
                "data-marker" : true,
                "data-scroll-wheel": false,
                "data-navigation-control": false,
                "data-scale-control": false,
                "data-draggable": false,
                "data-map-type-control": false
            }
        ) }}
        </div>
    </div>
</div>


<hr>


<div class="container">
    <h3>Google Streetview Maps</h3>

    <div class="row-fluid">


        <div class="col-md-12">
            {{ google.google_streetview(
                'office-street',
                {
                    "style":"width:100%; height:400px; border-radius: 8px; overflow: hidden",
                    "data-lat":"41.395086",
                    "data-lon":"2.1502881"
                }
            ) }}
        </div>
    </div>
</div>
{% endblock %}

